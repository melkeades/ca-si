.pricing__switch {
  display: inline-block;
  height: 34px;
  position: relative;
  width: 60px;
}

.pricing__switch input {
  display:none;
}

.pricing__switch_bg {
  background-color: #ccc;
  bottom: 0;
  cursor: pointer;
  left: 0;
  position: absolute;
  right: 0;
  top: 0;
  transition: .4s;
}

.pricing__switch__bg::before {
  background-color: #fff;
  bottom: 4px;
  content: "";
  height: 26px;
  left: 4px;
  position: absolute;
  transition: .4s;
  width: 26px;
}

.pricing__switch__input:checked + .pricing__switch__bg {
  background-color: #66bb6a;
}

.pricing__switch__input:checked + .pricing__switch__bg:before {
  transform: translateX(26px);
}

.pricing__switch__bg {
  border-radius: 34px;
}

.pricing__switch__bg::before {
  border-radius: 50%;
}


